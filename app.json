{
  "expo": {
    "name": "bubu",
    "slug": "bubu",
    "version": "1.0.0",
    "owner": "devabu01",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "bubu",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.devabu01.bubu",
      "infoPlist": {
        // --- COMBINED PERMISSIONS ---
        // FIX: Combined two overlapping camera descriptions into one comprehensive message.
        "NSCameraUsageDescription": "Allows video consultations and enables you to take photos of prescriptions or documents.",
        "NSMicrophoneUsageDescription": "Allows audio during consultations.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload prescriptions or documents.",
        "NSPhotoLibraryAddUsageDescription": "This app needs access to save photos",
        
        // Recommended for CallKeep/VOIP:
        "UIBackgroundModes": [
          "audio",
          "voip"
        ]
      }
    },
    "android": {
      "package": "com.devabu01.bubu",
      "adaptiveIcon": {
        "backgroundColor": "#FFFAFA",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      // COMBINED ANDROID PERMISSIONS
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.WAKE_LOCK",
        "android.permission.FOREGROUND_SERVICE",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "streamApiKey": "${EXPO_PUBLIC_STREAM_API_KEY}"
    },
    "plugins": [
      "expo-dev-client",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFFFF",
          "dark": {
            "backgroundColor": "#FFFFFF"
          }
        }
      ],
      // PLUGINS RETAINED
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to upload prescriptions or documents",
          "cameraPermission": "The app needs access to your camera to take prescription photos or for video consultations"
        }
      ],
      //[
        //"expo-document-picker",
       // {
          //"iCloudContainerEnvironment": "Production"
       // }
      //],
      "expo-web-browser"
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}